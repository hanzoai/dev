{
  "name": "@hanzo/oss-payments",
  "version": "1.0.0",
  "description": "OSS Author Payment Tracking and Distribution System",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "bin": {
    "oss-payments": "./dist/cli/bin.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@octokit/graphql": "^7.0.2",
    "commander": "^12.0.0",
    "decimal.js": "^10.4.3",
    "drizzle-orm": "^0.29.3",
    "fast-glob": "^3.3.2",
    "got": "^14.0.0",
    "ora": "^8.0.1",
    "postgres": "^3.4.3",
    "semver": "^7.5.4",
    "toml": "^3.0.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/semver": "^7.5.6",
    "drizzle-kit": "^0.20.10",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hanzoai/oss-payments.git"
  },
  "keywords": [
    "oss",
    "payments",
    "funding",
    "open-source",
    "dependencies",
    "attribution"
  ],
  "author": "Hanzo AI <hello@hanzo.ai>",
  "license": "MIT"
}
