{
  "name": "dev-monorepo",
  "private": true,
  "description": "Tools for repo-wide maintenance.",
  "scripts": {
    "format": "prettier --check *.json *.md .github/workflows/*.yml **/*.js",
    "format:fix": "prettier --write *.json *.md .github/workflows/*.yml **/*.js",
    "build": "cd src/rs && cargo build --release --bin dev --bin dev-tui --bin dev-exec",
    "build:dev": "cd src/rs && cargo build --bin dev --bin dev-tui --bin dev-exec",
    "build:quick": "cd src/rs && cargo build --release --bin dev",
    "test:local": "cd src/ts && npm link && dev --version",
    "fix": "cargo fmt && cargo fix --allow-dirty && cargo clippy --fix --allow-dirty"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "resolutions": {
    "braces": "^3.0.3",
    "micromatch": "^4.0.8",
    "semver": "^7.7.1"
  },
  "overrides": {
    "punycode": "^2.3.1"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.8.1"
}
