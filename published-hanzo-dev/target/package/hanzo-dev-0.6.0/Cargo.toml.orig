[package]
name = "hanzo-dev"
version = "0.6.0"
edition = "2021"
description = "Hanzo Dev - AI-powered development assistant with GitHub Copilot integration"
license = "MIT"
repository = "https://github.com/hanzoai/dev"
homepage = "https://hanzo.ai/dev"
authors = ["Hanzo AI <dev@hanzo.ai>"]
keywords = ["ai", "cli", "development", "copilot", "assistant"]
categories = ["command-line-utilities", "development-tools"]
readme = "README.md"

[[bin]]
name = "dev"
path = "src/main.rs"

[dependencies]
clap = { version = "4.5", features = ["derive"] }
tokio = { version = "1.40", features = ["full"] }
anyhow = "1.0"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"