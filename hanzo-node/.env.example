# Hanzo Node Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# Node Identity
# =============================================================================
# Unique node identifier (auto-generated if empty)
HANZO_NODE_ID=

# =============================================================================
# Network Configuration
# =============================================================================
# Network ID: 43114 = mainnet, 43113 = testnet, 1337 = local
HANZO_NETWORK_ID=1337

# Bootstrap peers (comma-separated multiaddrs)
# Example: /ip4/10.0.0.1/tcp/9000/p2p/QmPeer1,/ip4/10.0.0.2/tcp/9000/p2p/QmPeer2
HANZO_BOOTSTRAP_PEERS=

# =============================================================================
# Port Configuration
# =============================================================================
# External port mappings (host:container)
HANZO_RPC_PORT=9090
HANZO_HTTP_PORT=8080
HANZO_P2P_PORT=9000

# =============================================================================
# Operator Configuration
# =============================================================================
# Operator wallet address for staking rewards
HANZO_OPERATOR_ADDRESS=

# =============================================================================
# Performance
# =============================================================================
# Resource limits
HANZO_CPU_LIMIT=4
HANZO_MEMORY_LIMIT=4G

# MLX acceleration (macOS containers only - typically disabled)
HANZO_MLX=false

# =============================================================================
# Logging
# =============================================================================
# Log level: trace, debug, info, warn, error
HANZO_LOG_LEVEL=info
RUST_LOG=hanzo_node=info,tonic=info,libp2p=warn

# =============================================================================
# Monitoring (optional - enable with: docker compose --profile monitoring up)
# =============================================================================
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=hanzo
